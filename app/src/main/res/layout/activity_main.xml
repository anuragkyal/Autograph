<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anuragkyal.autograph.MainActivity">

    <com.example.anuragkyal.autograph.ui.DrawingView
        android:id="@+id/signature_drawing"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/signature_stroke"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center">

        <ImageView
            android:id="@+id/signature_done"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_done"
            android:rotation="270"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/signature_reset"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_reset"
            android:rotation="270"
            android:layout_margin="10dp"
            />

    </LinearLayout>


</FrameLayout>
